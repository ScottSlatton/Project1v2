<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


<!-- Servlets  -->

    <servlet>
        <servlet-name>ApproveAccountServlet</servlet-name>
        <servlet-class>com.banking.servlets.ApproveAccountServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AccountApplicationServlet</servlet-name>
        <servlet-class>com.banking.servlets.AccountApplicationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerHomeServlet</servlet-name>
        <servlet-class>com.banking.servlets.CustomerHomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DepositServlet</servlet-name>
        <servlet-class>com.banking.servlets.DepositServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <servlet-class>com.banking.servlets.EmployeeHomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <servlet-class>com.banking.servlets.EmployeeLoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.banking.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.banking.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.banking.servlets.SignUpServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TransferServlet</servlet-name>
        <servlet-class>com.banking.servlets.TransferServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>com.banking.servlets.WithdrawServlet</servlet-class>
    </servlet>


<!--  Servlet Mapping-->

    <servlet-mapping>
        <servlet-name>ApproveAccountServlet</servlet-name>
        <url-pattern>/approve</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AccountApplicationServlet</servlet-name>
        <url-pattern>/accountapply</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerHomeServlet</servlet-name>
        <url-pattern>/customerhome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DepositServlet</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EmployeeHomeServlet</servlet-name>
        <url-pattern>/employeehome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EmployeeLoginServlet</servlet-name>
        <url-pattern>/employeelogin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TransferServlet</servlet-name>
        <url-pattern>/transfer</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/withdraw</url-pattern>
    </servlet-mapping>


</web-app>